@model IEnumerable<ADO_DotNet.Models.Entities.Employee>

@{
    ViewData["Title"] = "Employees Page";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Add New Employee</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @*<img src="@Url.Content(item.ImagePath)" class="img-fluid rounded img-thumbnail" style="width:70px" alt="@item.Name" />*@
                    <img src="@("~/Upload/"+item.ImagePath)" asp-append-version="true" class="img-fluid rounded" style="width:130px" alt="@item.Name" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    @Html.ActionLink("Update", "Update", new { id = item.EmpId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.EmpId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.EmpId }, new { onclick = "return confirm('Are you sure you want to delete?')" })
                </td>
            </tr>
        }
    </tbody>
</table>